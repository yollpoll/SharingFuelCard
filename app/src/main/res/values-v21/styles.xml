<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Widget.MyTheme.HeaderBar" parent="Widget.AppCompat.Light.Spinner.DropDown.ActionBar">
        <item name="android:theme">@style/ActionBarThemeOverlay</item>
    </style>

    <style name="ActionBarThemeOverlay" parent="">
        <item name="android:textColorPrimary">@color/colorAccent</item>
        <item name="colorControlNormal">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/colorAccent</item>
    </style>

    <style name="StyleBtnLogin">
        <item name="android:background">@drawable/ripple_btn_login</item>
    </style>

    <style name="StyleApplyFuelCard">
        <item name="android:background">@drawable/ripple_apply_fuel_card</item>
    </style>

    <style name="StyleWhiteRipple">
        <item name="android:foreground">@drawable/ripple_white_mask</item>
    </style>

    <style name="StyleAddPhoto">
        <item name="android:foreground">@drawable/ripple_add_photo</item>
    </style>

    <style name="StyleWhiteBgRipple">
        <item name="android:background">@drawable/ripple_item_mine</item>
    </style>

    <style name="StyleCancelBind">
        <item name="android:background">@drawable/ripple_cancel_bind_card</item>
    </style>

    <style name="StyleBuyPlan">
        <item name="android:background">@drawable/ripple_buy_plan</item>
    </style>

    <style name="StyleGreatChoiceLeft">
        <item name="android:background">@drawable/ripple_great_choice_button_left</item>
    </style>

    <style name="StyleGreatChoiceRight">
        <item name="android:background">@drawable/ripple_great_choice_right</item>
    </style>
</resources>