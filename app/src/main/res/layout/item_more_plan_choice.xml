<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="230dp">

    <RelativeLayout
        android:id="@+id/rl_root"
        style="@style/StyleWhiteBgRipple"
        android:layout_width="match_parent"
        android:layout_height="209dp">

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentTop="true"
            android:background="@color/colorLine" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="44dp">

            <View
                android:layout_width="6dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:background="@color/colorPrimary" />

            <TextView
                android:id="@+id/tv_plan_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:text="家庭套餐"
                android:textColor="@color/recommendPlan" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_alignParentBottom="true"
                android:background="@color/colorLine" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="71dp">

            <TextView
                android:id="@+id/tv_share_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="月享"
                android:textColor="@color/recommendPlan"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_month_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/tv_share_title"
                android:text="1000"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp" />

            <View
                android:id="@+id/line"
                android:layout_width="1.5dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/tv_month_share"
                android:background="@color/recommendPlan" />

            <TextView
                android:id="@+id/tv_month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/line"
                android:text="共19个月"
                android:textColor="@color/recommendPlan"
                android:textSize="18sp" />


        </RelativeLayout>

        <LinearLayout
            android:id="@+id/rl_discount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_month"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="折扣后最高优惠"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_discount_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100元"
                android:textColor="@color/colorPrimary"
                android:textSize="12sp" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_buy"
            style="@style/StyleBtnLogin"
            android:layout_width="260dp"
            android:layout_height="40dp"
            android:layout_below="@+id/rl_discount"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="24dp"
            android:text="马上买入"
            android:textColor="@color/white" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:background="@color/colorLine" />
    </RelativeLayout>
</RelativeLayout>