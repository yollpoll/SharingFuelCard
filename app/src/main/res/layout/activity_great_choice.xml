<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/ll_bottom"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="186dp"
                android:background="@mipmap/icon_main_bg">

                <include layout="@layout/layout_title" />

                <TextView
                    android:id="@+id/tv_month_money_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rl_title"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15dp"
                    android:text="月享加油金"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/tv_month_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_month_money_title"
                    android:layout_centerHorizontal="true"
                    android:text="200"
                    android:textColor="@color/white"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/tv_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="20dp"
                    android:text="套餐内容"
                    android:textColor="@color/white" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/colorLine" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_add_money_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:text="加油金额"
                    android:textColor="@color/recommendPlan" />

                <TextView
                    android:id="@+id/tv_reduce"
                    style="@style/StyleGreatChoiceLeft"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_below="@+id/tv_add_money_title"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="14dp"
                    android:text="-"
                    android:paddingBottom="10dp"
                    android:gravity="center_horizontal"
                    android:textColor="@color/white"
                    android:textSize="35sp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_below="@+id/tv_add_money_title"
                    android:layout_marginTop="14dp"
                    android:layout_toLeftOf="@+id/tv_add"
                    android:layout_toRightOf="@+id/tv_reduce"
                    android:background="@drawable/shape_great_choice_rl">

                    <TextView
                        android:id="@+id/tv_cycle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="5dp"
                        android:text="60个月"
                        android:textColor="@color/colorTextGray" />

                    <TextView
                        android:id="@+id/tv_money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="10000"
                        android:textColor="@color/recommendPlan"
                        android:textSize="20sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="5dp"
                        android:text="元" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_add"
                    style="@style/StyleGreatChoiceRight"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/tv_add_money_title"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="14dp"
                    android:gravity="center"
                    android:text="+"
                    android:textColor="@color/white"
                    android:textSize="30sp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/colorLine" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="20dp"
                android:background="@color/colorLine" />

            <RelativeLayout
                android:id="@+id/rl_recharge_detail"
                style="@style/StyleWhiteBgRipple"
                android:layout_width="match_parent"
                android:layout_height="48dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:text="充值明细"
                    android:textColor="@color/recommendPlan" />

                <TextView
                    android:id="@+id/tv_recharge_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"
                    android:singleLine="true"
                    android:text="明细............"
                    android:textColor="@color/colorPrimary" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/colorLine" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="20dp"
                android:background="@color/colorLine" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="20dp"
                    android:text="选择支付方式"
                    android:textColor="@color/recommendPlan" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="20dp"
                    android:background="@color/colorLine" />

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:orientation="vertical"
                    android:id="@+id/rg_buy"
                    android:paddingLeft="20dp">

                    <android.support.v7.widget.AppCompatRadioButton
                        android:id="@+id/rb_wechatpay"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:checked="true"
                        android:visibility="gone"
                        android:drawableLeft="@mipmap/icon_wechat_pay"
                        android:drawablePadding="10dp"
                        android:paddingLeft="10dp"
                        android:text="微信支付" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/colorLine" />

                    <android.support.v7.widget.AppCompatRadioButton
                        android:id="@+id/rb_alipay"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:drawableLeft="@mipmap/icon_alipay"
                        android:drawablePadding="10dp"
                        android:paddingLeft="10dp"
                        android:text="支付宝支付" />
                </RadioGroup>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/colorLine" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_all_money"
            style="@style/StyleCancelBind"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:text="合计:22222元"
            android:textColor="@color/recommendPlan" />

        <TextView
            android:id="@+id/tv_buy"
            style="@style/StyleBuyPlan"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center"
            android:text="立即购买"
            android:textColor="@color/white" />
    </LinearLayout>
</RelativeLayout>